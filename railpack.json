{
  "provider": "railway",
  "buildAptPackages": ["python3", "python3-pip"],
  "steps": {
    "build": {
      "commands": [
        "python3 -m pip install -U pip setuptools wheel || true",
        "python3 -m pip install . || true",
        "python3 -m pip uninstall -y opencv-python || true",
        "python3 -m pip install --no-deps opencv-python-headless==4.11.0.86"
      ]
    }
  },
  "deploy": {
    "startCommand": "bash ./start_headless.sh",
    "aptPackages": [
      "python3",
      "python3-pip",
      "tesseract-ocr",
      "poppler-utils"
    ]
  }
}
